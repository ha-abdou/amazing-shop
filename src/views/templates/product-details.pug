<div class="card mb-3">
  <div class="row no-gutters">
    <div class="col-md-4">
      img(src=product.img, class="card-img", alt="...")
    </div>
    <div class="col-md-8">
      <div class="card-body">
        h5(class="card-title")=product.label
        p(class="card-text")
          = product.price + 'â‚¬ '
          if product.discount
            span(class="badge badge-danger") !{product.discount.type} -#{product.discount.amount}%
        p(class="card-text")=product.description
        if inCart
          button(
            id="add-remove-from-cart",
            type="button",
            class="btn btn-danger",
            onclick=`removeFromCart("${product.id}", "${product.label}")`
          ) remove from cart
        else
          button(
            id="add-remove-from-cart",
            type="button",
            class="btn btn-primary",
            onclick=`addToCart("${product.id}", "${product.label}")`
          ) add to cart
      </div>
    </div>
  </div>
</div>